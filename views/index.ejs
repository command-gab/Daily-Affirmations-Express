<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Quotes for You</title>
  <link rel="shortcut icon" href="/public/favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>

<body>

  <form action="/messages" method="POST" id="quote">
    <input type="text" placeholder="Practice Self-Love" name="msg" id="quote2">
    <button type="submit" id="button">â™¥</button>
  </form>

  <form action="/search" method="GET" id="search">
    <input type="text" placeholder="Search The Page" name="search" id="search2">
    <button type="submit" id="button2">Search</button>
  </form>

  <ul class="messages">
    <% for(let i=0; i<messages.length; i++) {%>
      <li class="message">
        <!-- <span><%= messages[i].name %></span> -->
        <span><%= messages[i].msg %></span>
        <span id="heart"><%= messages[i].heart %></span>

        <span><i class="fa fa-heart" aria-hidden="true"></i></span>
        <!-- <span><i class="fa fa-trash" aria-hidden="true"></i></span> -->
      </li>
      <% } %>
  </ul>

  <script src="main.js"></script>

</body>

</html>